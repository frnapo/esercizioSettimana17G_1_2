    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Indirizzo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodFiscale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coniugato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FigliACarico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mansione)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
